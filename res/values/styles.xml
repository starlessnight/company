<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Header">
	    <item name="android:textSize">@dimen/smaller_font</item>
	    <item name="android:textColor">@android:color/white</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:padding">15dp</item>
	    <item name="android:background">@color/header_background</item>
	</style>
	<style name="SmallerText">
	    <item name="android:textSize">@dimen/smaller_font</item>
	    <item name="android:textColor">@android:color/white</item>
	</style>
	<style name="SmallerBoldText" parent="SmallerText">
	    <item name="android:textStyle">bold</item>
	</style>
	<style name="SmallestText">
	    <item name="android:textSize">@dimen/smallest_font</item>
	    <item name="android:textColor">@color/secondary_font</item>
	</style>
	<style name="NormalTextField">
	    <item name="android:textSize">@dimen/smaller_font</item>
	    <item name="android:textColor">@android:color/white</item>
	    <item name="android:textColorHint">@color/secondary_font</item>
	    <item name="android:paddingTop">14dp</item>
		<item name="android:paddingRight">15dp</item>
		<item name="android:paddingBottom">16dp</item>
		<item name="android:paddingLeft">15dp</item>
		<item name="android:background">@drawable/normal_text_field</item>
	</style>
	<style name="DualTextFieldFirst" parent="NormalTextField">
		<item name="android:background">@drawable/dual_text_field_first</item>
	</style>
	<style name="DualTextFieldSecond" parent="NormalTextField">
		<item name="android:background">@drawable/dual_text_field_second</item>
	</style>
	<style name="NextActionButton">
	    <item name="android:textSize">@dimen/large_font</item>
	    <item name="android:textColor">@color/button_text</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:paddingTop">3dp</item>
		<item name="android:paddingRight">44dp</item>
		<item name="android:paddingBottom">7dp</item>
		<item name="android:paddingLeft">15dp</item>
		<item name="android:gravity">left</item>
		<item name="android:background">@drawable/next_action_button</item>
	</style>
	<style name="CurrentLocationButton">
	    <item name="android:textSize">@dimen/smaller_font</item>
	    <item name="android:textColor">@color/button_text</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:paddingTop">4dp</item>
		<item name="android:paddingRight">44dp</item>
		<item name="android:paddingBottom">6dp</item>
		<item name="android:paddingLeft">15dp</item>
		<item name="android:gravity">left</item>
		<item name="android:background">@drawable/current_location_button</item>
	</style>
	<style name="SaveButton">
	    <item name="android:textSize">@dimen/smaller_font</item>
	    <item name="android:textColor">@color/button_text</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:paddingTop">4dp</item>
		<item name="android:paddingRight">44dp</item>
		<item name="android:paddingBottom">6dp</item>
		<item name="android:paddingLeft">15dp</item>
		<item name="android:gravity">left</item>
		<item name="android:background">@drawable/save_button</item>
	</style>
	<style name="LoadButton">
	    <item name="android:textSize">@dimen/smaller_font</item>
	    <item name="android:textColor">@color/button_text</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:paddingTop">4dp</item>
		<item name="android:paddingRight">44dp</item>
		<item name="android:paddingBottom">6dp</item>
		<item name="android:paddingLeft">15dp</item>
		<item name="android:gravity">left</item>
		<item name="android:background">@drawable/load_button</item>
	</style>
	<style name="MoreButton">
	    <item name="android:src">@drawable/more_button_icon</item>
		<item name="android:scaleType">center</item>
	    <item name="android:background">@android:color/black</item> 
	</style>
</resources>
