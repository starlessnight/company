<?xml version="1.0" encoding="utf-8"?>
<resources xmlns:android="http://schemas.android.com/apk/res/android">
    <style name="Header">
	    <item name="android:textSize">@dimen/smaller_font</item>
	    <item name="android:textColor">@android:color/white</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:padding">15dp</item>
	    <item name="android:background">@color/header_background</item>
	</style>
	<style name="OverlayHeader">
	    <item name="android:textSize">@dimen/smaller_font</item>
	    <item name="android:textColor">@android:color/white</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:paddingTop">10dp</item>
	    <item name="android:paddingRight">15dp</item>
	    <item name="android:paddingBottom">8dp</item>
	    <item name="android:paddingLeft">15dp</item>
	    <item name="android:background">@color/pop_up_header_background</item>
	</style>
	<style name="PopUpHeader" parent="OverlayHeader"></style>
	<style name="OverlayBody">
	    <item name="android:textSize">@dimen/smaller_font</item>
	    <item name="android:textColor">@android:color/white</item>
	    <item name="android:paddingTop">22dp</item>
	    <item name="android:paddingRight">15dp</item>
	    <item name="android:paddingBottom">24dp</item>
	    <item name="android:paddingLeft">15dp</item>
	    <item name="android:background">@color/dark_gray</item>
	</style>
	<style name="SmallerText">
	    <item name="android:textSize">@dimen/smaller_font</item>
	    <item name="android:textColor">@android:color/white</item>
	</style>
	<style name="SmallerBoldText" parent="SmallerText">
	    <item name="android:textStyle">bold</item>
	</style>
	<style name="SmallestText">
	    <item name="android:textSize">@dimen/smallest_font</item>
	    <item name="android:textColor">@color/secondary_font</item>
	</style>
	<style name="MicroText">
	    <item name="android:textSize">@dimen/micro_font</item>
	    <item name="android:textColor">@color/secondary_font</item>
	    <item name="android:includeFontPadding">false</item>
	</style>
	<style name="MediumText">
	    <item name="android:textSize">@dimen/medium_font</item>
	    <item name="android:includeFontPadding">false</item>
	    <item name="android:textColor">@android:color/white</item>
	    <item name="android:paddingTop">5dp</item>
	</style>
	<style name="NormalTextField">
	    <item name="android:textSize">@dimen/smaller_font</item>
	    <item name="android:textColor">@android:color/white</item>
	    <item name="android:textColorHint">@color/secondary_font</item>
	    <item name="android:paddingTop">17dp</item>
		<item name="android:paddingRight">15dp</item>
		<item name="android:paddingBottom">17dp</item>
		<item name="android:paddingLeft">15dp</item>
		<item name="android:includeFontPadding">false</item>
		<item name="android:background">@drawable/normal_text_field</item>
	</style>
	<style name="DualTextFieldFirst" parent="NormalTextField">
		<item name="android:background">@drawable/dual_text_field_first</item>
	</style>
	<style name="DualTextFieldSecond" parent="NormalTextField">
		<item name="android:background">@drawable/dual_text_field_second</item>
	</style>
	<style name="TimeTextField" parent="NormalTextField">
	    <item name="android:textSize">@dimen/large_font</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:paddingTop">0dp</item>
		<item name="android:paddingRight">0dp</item>
		<item name="android:paddingBottom">0dp</item>
		<item name="android:paddingLeft">0dp</item>
		<item name="android:includeFontPadding">true</item>
		<item name="android:singleLine">true</item>
		<item name="android:gravity">center</item>
	</style>
	<style name="WeekdayCheckBox">
	    <item name="android:textSize">@dimen/smaller_font</item>
	    <item name="android:textColor">@color/weekday_button_text</item>
	    <item name="android:paddingTop">17dp</item>
		<item name="android:paddingRight">0dp</item>
		<item name="android:paddingBottom">17dp</item>
		<item name="android:paddingLeft">0dp</item>
		<item name="android:includeFontPadding">false</item>
		<item name="android:gravity">center</item>
		<item name="android:background">@drawable/weekday_checkbox</item>
    </style>
	<style name="LargeTextButton">
	    <item name="android:textSize">@dimen/large_font</item>
	    <item name="android:textColor">@color/button_text</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:paddingTop">10dp</item>
		<item name="android:paddingRight">44dp</item>
		<item name="android:paddingLeft">15dp</item>
		<item name="android:paddingBottom">10dp</item>
		<item name="android:includeFontPadding">false</item>
		<item name="android:gravity">left</item>
	</style>
	<style name="NextActionButton" parent="LargeTextButton">
		<item name="android:background">@drawable/next_action_button</item>
	</style>
	<style name="AddButton" parent="LargeTextButton">
		<item name="android:background">@drawable/add_button</item>
	</style>
	<style name="AddBuddyButton" parent="LargeTextButton">
		<item name="android:background">@drawable/add_buddy_button</item>
	</style>
	<style name="LargeSaveButton" parent="LargeTextButton">
		<item name="android:background">@drawable/save_button</item>
	</style>
	<style name="AlarmGreenButton" parent="LargeTextButton">
		<item name="android:background">@drawable/alarm_green_button</item>
	</style>
	<style name="AlarmBlueButton" parent="LargeTextButton">
		<item name="android:background">@drawable/alarm_blue_button</item>
	</style>
	<style name="YesButton" parent="LargeTextButton">
		<item name="android:background">@drawable/yes_button</item>
	</style>
	<style name="PrevActionButton" parent="LargeTextButton">
		<item name="android:background">@drawable/prev_action_button</item>
	</style>
	<style name="SmallerTextButton">
	    <item name="android:textSize">@dimen/smaller_font</item>
	    <item name="android:textColor">@color/button_text</item>
	    <item name="android:textStyle">bold</item>
	    <item name="android:paddingTop">6dp</item>
		<item name="android:paddingRight">44dp</item>
		<item name="android:paddingBottom">2dp</item>
		<item name="android:paddingLeft">15dp</item>
		<item name="android:gravity">left</item>
		<item name="android:includeFontPadding">false</item>
	</style>
	<style name="CurrentLocationButton" parent="SmallerTextButton">
		<item name="android:background">@drawable/current_location_button</item>
	</style>
	<style name="SaveButton" parent="SmallerTextButton">
		<item name="android:background">@drawable/save_button</item>
	</style>
	<style name="LoadButton" parent="SmallerTextButton">
		<item name="android:background">@drawable/load_button</item>
	</style>
	<style name="ReverseButton">
		<item name="android:src">@drawable/reverse_button</item>
		<item name="android:scaleType">center</item>
		<item name="android:background">@android:color/transparent</item>
	</style>
	<style name="MoreButton">
	    <item name="android:src">@drawable/icon_more_disabled</item>
		<item name="android:scaleType">center</item>
	    <item name="android:background">@android:color/black</item>
	</style>
	<style name="UpButton">
	    <item name="android:src">@drawable/icon_up_disabled</item>
		<item name="android:scaleType">center</item>
	    <item name="android:background">@android:color/black</item>
	</style>
	<style name="DownButton">
	    <item name="android:src">@drawable/icon_down_disabled</item>
		<item name="android:scaleType">center</item>
	    <item name="android:background">@android:color/black</item>
	</style>
	<style name="PopUpDialog">
	    <item name="android:windowBackground">@android:color/transparent</item>
	    <item name="android:colorBackgroundCacheHint">@null</item>
	    <item name="android:windowIsTranslucent">true</item>
	    <item name="android:windowAnimationStyle">@android:style/Animation.Dialog</item>
	    <item name="android:windowNoTitle">true</item>
	    <item name="android:windowContentOverlay">@null</item>
	</style>
</resources>
