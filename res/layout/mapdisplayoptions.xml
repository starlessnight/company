<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/gray"
    android:orientation="vertical" >

    <TextView
        android:id="@+id/time_heading"
        android:text="@string/time_display"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="45dp"
        style="@style/MicroText">
    </TextView>

    <View
        android:id="@+id/separator"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/time_heading"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/secondary_font"  
     />
    
    <RelativeLayout
        android:id="@+id/group1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/separator"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp">

        <RadioGroup
            android:id="@+id/time_display_mode"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/mdoradio1"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:text="@string/display_travel_time"
                android:button="@null"
	            android:drawableRight="@drawable/radio"
	            android:gravity="left|center_vertical"
                style="@style/MediumText"
                android:padding="0dp"
                android:layout_marginTop="0dp">
            </RadioButton>

            <RadioButton
                android:id="@+id/mdoradio2"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:text="@string/display_arrival_time"
                android:button="@null"
	            android:drawableRight="@drawable/radio"
	            android:gravity="left|center_vertical"
                style="@style/MediumText"
                android:padding="0dp"
                android:layout_marginTop="0dp">
            </RadioButton>
        </RadioGroup>
    </RelativeLayout>

    <TextView
        android:id="@+id/distribution_heading"
        android:text="DISTRUBUTION DATE"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@id/group1"
        android:layout_marginTop="15dp"
        android:layout_marginLeft="45dp"
        style="@style/MicroText">
    </TextView>

    <View
        android:id="@+id/separator2"
        android:layout_width="match_parent"
        android:layout_height="2dp"
        android:layout_below="@id/distribution_heading"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:background="@color/secondary_font"  
     />
    
    <TextView
        android:id="@+id/distribution_date"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/separator2"
        android:text="20130513"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="45dp"
        android:layout_marginRight="45dp"
        style="@style/MediumText"
	/>
    
    <TextView
        android:id="@+id/adjust_time_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/group1"
        android:gravity="center"
        android:orientation="vertical"
        android:text="@string/adjust_time"
        android:textColor="#FFFFFFFF"
        android:textSize="20dp"
        android:visibility="invisible" >
    </TextView>

    <RelativeLayout
        android:id="@+id/relativeLayout1"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_below="@id/adjust_time_heading"
        android:paddingLeft="65dp"
        android:visibility="invisible" >

        <RadioGroup
            android:id="@+id/time_increment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/time_increment_5min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="5"
                android:text="@string/five"
                android:textColor="#FFFFFFFF"
                android:textSize="18dp" >
            </RadioButton>

            <RadioButton
                android:id="@+id/time_increment_15min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="15"
                android:text="@string/fifteen"
                android:textColor="#FFFFFFFF"
                android:textSize="18dp" >
            </RadioButton>

            <RadioButton
                android:id="@+id/time_increment_60min"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:tag="60"
                android:text="@string/sixty"
                android:textColor="#FFFFFFFF"
                android:textSize="18dp" >
            </RadioButton>
        </RadioGroup>
    </RelativeLayout>

</RelativeLayout>