<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@drawable/setting_bg">
	    
    <ScrollView
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:fillViewport="true">
		    
		<LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:focusable="true"
		    android:focusableInTouchMode="true"
		    android:orientation="vertical">
		    
		    <FrameLayout 
		        	android:layout_width="match_parent"
		        	android:layout_height="24dp"
		        	android:background="@android:color/white">
		        <TextView 
		            android:id="@+id/header"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:gravity="center"
		            android:layout_gravity="center_vertical"
		            android:textColor="#6d6e70"
		            android:textSize="16dp"
		            android:text="Settings"/>
		        
		        <TextView 
		            android:id="@+id/back_button"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:gravity="left"
		            android:textColor="#33add8"
		            android:textSize="@dimen/smallest_font"
		            android:text="Back"
		            android:layout_gravity="center_vertical"
		            android:paddingLeft="10dp"
		            android:drawableLeft="@drawable/back_left_arrow"
		            android:drawablePadding="5dp"
				/>
		    </FrameLayout>
		    
		    <View
			   android:layout_width="fill_parent"
			   android:layout_height="5dp"
			   android:background="#929497" 
		    />
		    
		    <LinearLayout 
		        android:layout_width="fill_parent"
		        android:layout_height="64dp"
		        android:background="@android:color/white"
		        android:orientation="vertical"
		    >
		        <TextView 
		            android:id="@+id/user_name"
		            android:layout_width="wrap_content"
		            android:layout_height="32dp"
		            android:gravity="bottom"
		            android:layout_gravity="center_horizontal"
		            android:text=""
		            android:textSize="@dimen/medium_font"
		            android:textColor="@color/gray"
		        />
		        
		        <TextView 
		            android:id="@+id/user_email"
		            android:layout_width="wrap_content"
		            android:layout_height="32dp"
		            android:gravity="top"
		            android:layout_gravity="center_horizontal"
		            android:text=""
		            android:textSize="@dimen/smallest_font"
		            android:textColor="@color/gray"
		        />
		    </LinearLayout>
		    
		    <include layout="@layout/metropia_color_bar" />
		    
		    <TextView 
		        android:id="@+id/version_number"
		        android:layout_width="fill_parent"
		        android:layout_height="32dp"
		        android:background="@color/gray"
		        android:padding="2dp"
		        android:text="@string/version"
		        android:textSize="@dimen/medium_font"
		        android:textColor="@android:color/white"
		        android:gravity="center"
		        android:layout_gravity="center_vertical"/>
		    
		    <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="118dp"
		        android:layout_marginTop="31dp"
		        android:layout_marginLeft="18dp"
		        android:layout_marginRight="18dp"
		        android:layout_marginBottom="15dp"
		        android:background="@android:color/white"
		        android:orientation="vertical">
		        
		        <FrameLayout
		            android:layout_width="fill_parent"
		            android:layout_height="58dp"
		            android:paddingLeft="25dp"
		            android:paddingRight="26dp"
		            >
		            <TextView 
		                android:id="@+id/predict_destination_text"
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:text="Predict Destination"
		                android:textSize="@dimen/smaller_font"
		                android:textColor="@color/gray"
		                android:gravity="left"
		                android:layout_gravity="center_vertical"
		                android:singleLine="true"/>
		            
		            <ToggleButton 
		                android:id="@+id/predict_destination"
		                android:layout_width="46dp"
			            android:layout_height="30dp"
			            android:background="@drawable/setting_toggle_button"
			            android:gravity="right"
			            android:layout_gravity="center|right"
			            android:checked="true"
			            android:textOff=""
			            android:textOn=""
		            />
		            
		        </FrameLayout>
		        
		        <View 
		            android:layout_height="2dp"
		            android:layout_width="fill_parent"
		            android:layout_marginLeft="25dp"
		            android:layout_marginRight="26dp"
		            android:background="@color/lighter_gray"/>
		        
		        <FrameLayout
		            android:layout_width="fill_parent"
		            android:layout_height="58dp"
		            android:paddingLeft="25dp"
		            android:paddingRight="26dp"
		            >
		            <TextView 
		                android:id="@+id/calendar_integration_text"
		                android:layout_width="fill_parent"
		                android:layout_height="wrap_content"
		                android:text="Calendar Integration"
		                android:textSize="@dimen/smaller_font"
		                android:textColor="@color/gray"
		                android:gravity="left"
		                android:layout_gravity="center_vertical"
		                android:singleLine="true"/>
		            
		            <ToggleButton 
		                android:id="@+id/calendar_integration"
		                android:layout_width="46dp"
			            android:layout_height="30dp"
			            android:background="@drawable/setting_toggle_button"
			            android:gravity="right"
			            android:layout_gravity="center|right"
			            android:checked="true"
			            android:textOff=""
			            android:textOn=""
		            />
		            
		        </FrameLayout>
		        
		    </LinearLayout>
		    
		    <LinearLayout
		        android:layout_width="fill_parent"
		        android:layout_height="184dp"
		        android:layout_marginTop="15dp"
		        android:layout_marginLeft="18dp"
		        android:layout_marginRight="18dp"
		        android:background="@android:color/white"
		        android:orientation="vertical">
		        
		        <TextView 
		            android:id="@+id/tutorial"
		            android:layout_width="fill_parent"
		            android:layout_height="60dp"
		            android:layout_marginLeft="25dp"
		            android:layout_marginRight="26dp"
		            android:text="Tutorial"
		            android:textSize="@dimen/smaller_font"
		            android:textColor="@color/gray"
		            android:gravity="center_vertical"
		            android:layout_gravity="center_vertical"
		            android:drawableRight="@drawable/menu_right_arrow"/>
		        
		        <View 
		            android:layout_height="2dp"
		            android:layout_width="fill_parent"
		            android:layout_marginLeft="25dp"
		            android:layout_marginRight="22dp"
		            android:background="@color/lighter_gray"/>
		        
		        <TextView 
		            android:id="@+id/terms_and_conditions"
		            android:layout_width="fill_parent"
		            android:layout_height="60dp"
		            android:layout_marginLeft="25dp"
		            android:layout_marginRight="26dp"
		            android:text="Terms &amp; Conditions"
		            android:textSize="@dimen/smaller_font"
		            android:textColor="@color/gray"
		            android:gravity="center_vertical"
		            android:layout_gravity="center_vertical"
		            android:drawableRight="@drawable/menu_right_arrow"/>
		            
		        
		        <View 
		            android:layout_height="2dp"
		            android:layout_width="fill_parent"
		            android:layout_marginLeft="25dp"
		            android:layout_marginRight="22dp"
		            android:background="@color/lighter_gray"/>
		        
		        <TextView 
		            android:id="@+id/help_our_research"
		            android:layout_width="fill_parent"
		            android:layout_height="60dp"
		            android:layout_marginLeft="25dp"
		            android:layout_marginRight="26dp"
		            android:text="Help our Research"
		            android:textSize="@dimen/smaller_font"
		            android:textColor="@color/gray"
		            android:gravity="center_vertical"
		            android:layout_gravity="center_vertical"
		            android:drawableRight="@drawable/menu_right_arrow"/>
		    </LinearLayout>
		</LinearLayout>
	</ScrollView>
	
    <ImageView
	    android:id="@+id/floating_menu_button"
		android:layout_width="wrap_content"
		android:layout_height="wrap_content"
		android:src="@drawable/floating_menu_icon"
		android:layout_gravity="bottom|right"
		android:layout_marginRight="15dp"
        android:layout_marginBottom="15dp"
        android:visibility="invisible"
	/>
</FrameLayout>