<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/time_layout"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" >

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical" >

        <View
            android:layout_width="fill_parent"
            android:layout_height="5dp"
            android:background="#535353" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal" >

            <LinearLayout
                android:layout_width="70dp"
                android:layout_height="wrap_content"
                android:orientation="vertical" >

                <TextView
                    android:id="@+id/departure_row"
                    android:layout_width="match_parent"
                    android:layout_height="35dp"
                    android:background="#535353"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:text="Leave"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/smallest_font" />

                <TextView
                    android:id="@+id/arrive_row"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text="Arrive"
                    android:textColor="#6d6e70"
                    android:textSize="@dimen/smallest_font" />

                <TextView
                    android:id="@+id/duration_row"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:background="@android:color/white"
                    android:gravity="center"
                    android:text="Duration"
                    android:textColor="#6d6e70"
                    android:textSize="@dimen/smallest_font" />

                <TextView
                    android:id="@+id/mpoint_row"
                    android:layout_width="match_parent"
                    android:layout_height="31dp"
                    android:background="#535353"
                    android:gravity="center"
                    android:text="mPoints"
                    android:textColor="@android:color/white"
                    android:textSize="@dimen/smallest_font" />
            </LinearLayout>
            
            <RelativeLayout
                android:id="@+id/time_ticket_panel"
                android:layout_width="0dp"
                android:layout_height="130dp"
                android:layout_weight="1">
                
	            <com.smartrek.ui.timelayout.ScrollableTimeLayout
	                android:id="@+id/scrollTime"
	                android:layout_width="match_parent"
	                android:layout_height="wrap_content"
	                android:scrollbars="none" >
	
	                <com.smartrek.ui.timelayout.TimeLayout
	                    android:id="@+id/timelayout"
	                    android:layout_width="wrap_content"
	                    android:layout_height="wrap_content"
	                    display="time" />
	            </com.smartrek.ui.timelayout.ScrollableTimeLayout>
	            
	            <View
	                android:layout_width="5dp"
	                android:layout_height="match_parent"
	                android:background="@drawable/left_shadow"
	                android:layout_alignParentLeft="true" />
	
	            <View
	                android:layout_width="5dp"
	                android:layout_height="match_parent"
	                android:background="@drawable/right_shadow"
	                android:layout_alignParentRight="true" />
	            
            </RelativeLayout>
            
        </LinearLayout>
    </LinearLayout>
    <!--
    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="center_vertical"
        android:src="@drawable/timetable_right_arrow"
	/>    -->

</LinearLayout>