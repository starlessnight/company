                                android:id="@+id/upoint_panel"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" >

                                <TextView
                                    android:id="@+id/upoint"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:drawableLeft="@drawable/rewards"
                                    android:drawablePadding="5dp"
                                    android:gravity="center"
                                    android:text="000Pts"
                                    android:textColor="@color/metropia_blue"
                                    android:textSize="23dp" />
                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/save_time_panel"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" >

                                <TextView
                                    android:id="@+id/save_time"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:drawableLeft="@drawable/save_time"
                                    android:drawablePadding="5dp"
                                    android:gravity="center"
                                    android:text="00Min"
                                    android:textColor="@color/metropia_orange"
                                    android:textSize="23dp" />
                            </FrameLayout>

                            <FrameLayout
                                android:id="@+id/co2_panel"
                                android:layout_width="0dp"
                                android:layout_height="match_parent"
                                android:layout_weight="1" >

                                <TextView
                                    android:id="@+id/co2"
                                    android:layout_width="wrap_content"
                                    android:layout_height="wrap_content"
                                    android:layout_gravity="center"
                                    android:drawableLeft="@drawable/co2"
                                    android:drawablePadding="5dp"
                                    android:gravity="center"
                                    android:text="000lbs"
                                    android:textColor="@color/metropia_green"
                                    android:textSize="23dp" />
                            </FrameLayout>
                        </LinearLayout>
                    </LinearLayout>
                </LinearLayout>
                
            </RelativeLayout>

