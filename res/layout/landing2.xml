						android:background="@drawable/score_bubble"
						android:orientation="horizontal">
                        
                        <TextView
							android:id="@+id/score_notify_content"
							android:layout_width="wrap_content"
							android:layout_height="match_parent"
							android:text="100 reward points just for signing up!"
							android:textColor="@color/metropia_blue"
							android:textSize="@dimen/smallest_font"
							android:paddingLeft="10dp"
							android:paddingRight="5dp"
							android:paddingBottom="25dp"
							android:paddingTop="5dp"
							android:gravity="center"/>
                        
						<View 
							android:layout_height="match_parent"
							android:layout_width="0.5dp"
							android:layout_marginBottom="28dp"
							android:layout_marginTop="8dp"
							android:paddingLeft="5dp"
							android:background="@color/transparent_gray"/>
						
						<TextView 
							android:id="@+id/score_notify_close"
							android:layout_width="match_parent"
							android:layout_height="match_parent"
							android:layout_weight="1"
							android:text="Got it"
							android:textColor="#0130CB"
							android:textSize="12dp"
							android:paddingRight="9dp"
							android:paddingBottom="25dp"
							android:paddingTop="5dp"
							android:gravity="center"/>
                	
                	</LinearLayout>
				</RelativeLayout>
                
                <ListView
                    android:id="@+id/search_result_list"
                    android:layout_width="match_parent"
