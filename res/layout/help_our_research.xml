<?xml version="1.0" encoding="UTF-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    	android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:background="@color/light_gray_background"
	>
    
    <LinearLayout
		    android:layout_width="fill_parent"
		    android:layout_height="fill_parent"
		    android:background="@android:color/transparent"
		    android:focusable="true"
		    android:focusableInTouchMode="true"
		    android:orientation="vertical">
		
        <FrameLayout 
		        	android:layout_width="match_parent"
		        	android:layout_height="44dp"
		        	android:background="@android:color/white">
		        <TextView 
		            android:id="@+id/header"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:gravity="center"
		            android:layout_gravity="center_vertical"
		            android:textColor="#6d6e70"
		            android:textSize="@dimen/smaller_font"
		            android:text="Help our Research"
		            android:paddingTop="5dp"
		            android:paddingBottom="5dp"
				/>
		        <TextView 
		            android:id="@+id/back_button"
		            android:layout_width="match_parent"
		            android:layout_height="wrap_content"
		            android:gravity="left"
		            android:textColor="#33add8"
		            android:textSize="@dimen/smaller_font"
		            android:text="Back"
		            android:layout_gravity="center_vertical"
		            android:paddingTop="5dp"
		            android:paddingBottom="5dp"
		            android:paddingLeft="10dp"
		            android:drawableLeft="@drawable/back_left_arrow"
		            android:drawablePadding="5dp"
				/>
		</FrameLayout>	
		    
        <include layout="@layout/metropia_color_bar" />	  
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="130dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:layout_marginTop="35dp">
            
            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:background="@android:color/transparent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
				
                <TextView 
                    android:id="@+id/paydays_text"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="PAYDAYS"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/medium_font"
                    android:layout_gravity="center|left"
                    android:gravity="left"/>
                
                <ToggleButton 
                    android:id="@+id/paydays"
                    android:layout_width="46dp"
			        android:layout_height="30dp"
			        android:layout_marginRight="10dp"
			        android:background="@drawable/setting_toggle_button"
			        android:gravity="right"
			        android:layout_gravity="center|right"
			        android:checked="true"
			        android:textOff=""
			        android:textOn=""
			    />
            </FrameLayout>
            
            <View 
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="@color/light_gray"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            
            <TextView 
                android:id="@+id/paydays_desc"
                android:layout_height="85dp"
                android:layout_width="match_parent"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="@dimen/smallest_font"
                android:layout_gravity="center|left"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
            />
            
        </LinearLayout>
        
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="110dp"
            android:background="@android:color/white"
            android:orientation="vertical"
            android:layout_marginTop="35dp">
            
            <FrameLayout
                android:layout_width="fill_parent"
                android:layout_height="45dp"
                android:orientation="horizontal"
                android:background="@android:color/transparent"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp">
				
                <TextView 
                    android:id="@+id/drive_smart_text"
                    android:layout_height="wrap_content"
                    android:layout_width="match_parent"
                    android:layout_marginLeft="10dp"
                    android:text="Drive Smart"
                    android:textColor="@android:color/black"
                    android:textSize="@dimen/medium_font"
                    android:layout_gravity="center|left"
                    android:gravity="left"/>
                
                <ToggleButton 
                    android:id="@+id/drive_smart"
                    android:layout_width="46dp"
			        android:layout_height="30dp"
			        android:layout_marginRight="10dp"
			        android:background="@drawable/setting_toggle_button"
			        android:gravity="right"
			        android:layout_gravity="center|right"
			        android:checked="true"
			        android:textOff=""
			        android:textOn=""
			    />
            </FrameLayout>
            
            <View 
                android:layout_height="1dp"
                android:layout_width="match_parent"
                android:background="@color/light_gray"
                android:layout_marginLeft="10dp"
                android:layout_marginRight="10dp"/>
            
            <TextView 
                android:id="@+id/drive_smart_desc"
                android:layout_height="65dp"
                android:layout_width="match_parent"
                android:text=""
                android:textColor="@android:color/black"
                android:textSize="@dimen/smallest_font"
                android:layout_gravity="center|left"
                android:layout_marginLeft="20dp"
                android:layout_marginRight="20dp"
            />
            
        </LinearLayout>
        
    </LinearLayout>
    
</FrameLayout>