<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MainLayout"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:background="@drawable/background"
    android:padding="10px" >

    <TextView
        android:id="@+id/whereTo"
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:gravity="center_horizontal|center_vertical"
        android:paddingTop="10dp"
        android:text="@string/whereTo"
        android:textColor="#b39e69"
        android:textSize="22dp" />

    <ScrollView
        android:id="@+id/SV"
        android:layout_width="fill_parent"
        android:layout_height="fill_parent"
        android:layout_below="@id/whereTo"
        android:fillViewport="true" >

        <RelativeLayout
            android:id="@+id/RL2"
            android:layout_width="fill_parent"
            android:layout_height="44dp"
            android:orientation="vertical" >

            <RelativeLayout
                android:id="@+id/Section1"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content" >

                <TextView
                    android:id="@+id/origin_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="15dp"
                    android:text="@string/origin"
                    android:textColor="#FFFFFFFF" />

                <Button
                    android:id="@+id/Favs1"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/origin_text"
                    android:text="favs" />

                <EditText
                    android:id="@+id/origin_box"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/origin_text"
                    android:layout_marginRight="50dp"
                    android:inputType="textPostalAddress" >

                    <requestFocus>
                    </requestFocus>
                </EditText>

                <ListView
                    android:id="@+id/originFavs"
                    android:layout_width="match_parent"
                    android:layout_height="0dp"
                    android:layout_alignLeft="@+id/destination_box"
                    android:layout_alignParentRight="true"
                    android:layout_marginLeft="80dp"
                    android:layout_marginTop="80dp" >
                </ListView>
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Section2"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Section1" >

                <Button
                    android:id="@+id/Favs2"
                    android:layout_width="wrap_content"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_alignTop="@+id/destination_box"
                    android:text="favs" />

                <TextView
                    android:id="@+id/destination_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:layout_alignParentRight="true"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="15dp"
                    android:text="@string/destination"
                    android:textColor="#FFFFFFFF" />

                <EditText
                    android:id="@+id/destination_box"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/destination_text"
                    android:layout_marginRight="50dp"
                    android:inputType="textPostalAddress" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Section3"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_below="@id/Section2" >

                <TextView
                    android:id="@+id/date_text"
                    android:layout_width="fill_parent"
                    android:layout_height="wrap_content"
                    android:gravity="center"
                    android:paddingBottom="5dp"
                    android:paddingTop="15dp"
                    android:text="@string/date"
                    android:textColor="#FFFFFFFF" />

                <EditText
                    android:id="@+id/date_box"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_below="@id/date_text"
                    android:layout_marginRight="50dp"
                    android:inputType="date" />
            </RelativeLayout>

            <RelativeLayout
                android:id="@+id/Section4"
                android:layout_width="fill_parent"
                android:layout_height="wrap_content"
                android:layout_alignParentBottom="true"
                android:layout_below="@id/Section3" >

                <Button
                    android:id="@+id/hereAndNow"
                    android:layout_width="170dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="50dp"
                    android:layout_marginTop="15dp"
                    android:gravity="center"
                    android:text="@string/here_and_now" />

                <Button
                    android:id="@+id/Done"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="17dp"
                    android:layout_marginTop="80dp"
                    android:gravity="center"
                    android:text="@string/Go" />

                <!-- 
                <Button
                    android:id="@+id/Load"
                    android:layout_width="100dp"
                    android:layout_height="40dp"
                    android:layout_alignParentRight="true"
                    android:layout_marginRight="17dp"
                    android:layout_marginTop="130dp"
                    android:gravity="center"
                    android:text="@string/load" />
                -->
            </RelativeLayout>
        </RelativeLayout>
    </ScrollView>

</RelativeLayout>