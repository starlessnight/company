    <Button
        android:id="@+id/Done"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_column="1"
        android:gravity="center"
        android:padding="4dp"
        android:text="@string/Go"
        android:textStyle="bold" />

</LinearLayout>