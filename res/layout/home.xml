<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/MainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/background"
    android:orientation="vertical" >

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="left|bottom"
        android:src="@drawable/background_logo" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:padding="10dp"
        android:layout_marginTop="40dp" >

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:orientation="horizontal"
            android:gravity="center_vertical" >

            <TextView
                android:id="@+id/origin_text"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:layout_marginRight="20dp"
                android:gravity="bottom"
                android:text="From"
                android:textColor="#FFFFFFFF"
                android:textSize="18sp" />

            <Button
                android:id="@+id/origin_my_location"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@null"
                android:drawableLeft="@drawable/current_location"
                android:drawablePadding="2dp"
                android:padding="2dp"
                android:textSize="12sp"
                android:text="Current&#10;Location" />

            <Button
                android:id="@+id/button_load_trip"
                android:layout_width="wrap_content"
                android:layout_height="36dp"
                android:background="@null"
                android:drawableLeft="@drawable/load_trip"
                android:drawablePadding="2dp"
                android:padding="2dp"
                android:text="Load&#10;Trip"
                android:textSize="12sp" />

        </LinearLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.smartrek.ui.EditAddress
                android:id="@+id/origin_box"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:inputType="textPostalAddress" >

                <requestFocus android:layout_width="match_parent" >
                </requestFocus>
            </com.smartrek.ui.EditAddress>

            <ImageButton
                android:id="@+id/Favs1"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="right"
                android:background="@null"
                android:padding="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/favorite_address" />
        </FrameLayout>

        <TextView
            android:id="@+id/destination_text"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="40dp"
            android:layout_marginTop="20dp"
            android:gravity="left"
            android:text="To"
            android:textColor="#FFFFFFFF"
            android:textSize="18sp" />

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <com.smartrek.ui.EditAddress
                android:id="@+id/destination_box"
                android:layout_width="match_parent"
                android:layout_height="40dp"
                android:layout_gravity="center"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:inputType="textPostalAddress" />

            <ImageButton
                android:id="@+id/Favs2"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="right"
                android:background="@null"
                android:padding="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/favorite_address" />
        </FrameLayout>

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp" >

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginLeft="40dp"
                android:layout_marginRight="40dp"
                android:orientation="horizontal" >

                <Button
                    android:id="@+id/button_save_trip"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:enabled="false"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="@string/save_trip" />

                <Button
                    android:id="@+id/Done"
                    android:layout_width="0dip"
                    android:layout_height="wrap_content"
                    android:layout_weight=".5"
                    android:gravity="center"
                    android:padding="4dp"
                    android:text="Next"
                    android:textStyle="bold" />
            </LinearLayout>

            <ImageButton
                android:id="@+id/button_save_trip_help"
                android:layout_width="36dp"
                android:layout_height="36dp"
                android:layout_gravity="right|center_vertical"
                android:background="@null"
                android:padding="2dp"
                android:scaleType="fitXY"
                android:src="@drawable/question_mark"
                android:visibility="gone" />
        </FrameLayout>

    </LinearLayout>

</FrameLayout>