<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:orientation="vertical" >

    <FrameLayout 
        	android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:background="@android:color/white">
        <TextView 
            android:id="@+id/header"
            android:layout_width="match_parent"
            android:layout_height="44dp"
            android:gravity="center"
            android:layout_gravity="center_vertical"
            android:textColor="#6d6e70"
            android:textSize="@dimen/smaller_font"
            android:text="Departure Time"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
		/>
        <TextView 
            android:id="@+id/back_button"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:gravity="left"
            android:textColor="#33add8"
            android:textSize="@dimen/smallest_font"
            android:text="Back"
            android:layout_gravity="center_vertical"
            android:paddingTop="5dp"
            android:paddingBottom="5dp"
            android:paddingLeft="10dp"
            android:drawableLeft="@drawable/back_left_arrow"
            android:drawablePadding="5dp"
		/>
    </FrameLayout>
    
    <include layout="@layout/time_layout" />
    
    <FrameLayout android:layout_weight="1"
	        android:layout_width="match_parent"
	        android:layout_height="0dp">
        <include layout="@layout/mapview" />
        
        <TextView
    	    android:id="@+id/destination"
    	    android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
           	android:layout_marginLeft="15dp"
           	android:layout_marginRight="15dp"
           	android:singleLine="true"
           	style="@style/SearchTextField"
           	android:layout_gravity="top|center_horizontal"
		/>
    </FrameLayout>
    
    <LinearLayout
          	android:id="@+id/lets_go_panel"
	       	android:layout_width="match_parent"
	       	android:layout_height="56dp"
	       	android:orientation="horizontal">
      	<FrameLayout
      	    	android:layout_width="0dp"
	        	android:layout_height="match_parent"
      	    	android:background="#0098ce"
      	    	android:layout_weight="1">
	       	<TextView
	       	    android:id="@+id/on_my_way"
	       	    android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:text="On My Way"
	        	android:layout_gravity="center"
	        	android:textSize="@dimen/smaller_font"
       			android:textColor="@android:color/white"
       			android:paddingLeft="8dp"
       			android:paddingRight="8dp"
	        	android:singleLine="true"
			/>
      	</FrameLayout>
      	<FrameLayout
      	    	android:layout_width="0dp"
        		android:layout_height="match_parent"
      	    	android:background="#95d600"
      	    	android:layout_weight="1">
	       	<TextView 
	       	    android:id="@+id/lets_go"
	       	    android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:text="Let's Go"
	        	android:layout_gravity="center"
	        	android:textSize="@dimen/smaller_font"
	  			android:textColor="@android:color/white"
	  			android:paddingLeft="8dp"
	  			android:paddingRight="8dp"
	        	android:singleLine="true"
			/>
   		</FrameLayout>
	</LinearLayout>
	
    <FrameLayout
	       	android:id="@+id/reserve_panel"
	      	android:layout_width="match_parent"
	      	android:layout_height="56dp"
	      	android:orientation="horizontal"
	      	android:background="#ff5f00"
	      	android:visibility="gone">
      	<TextView 
       	    android:id="@+id/reserve"
       	    android:layout_width="wrap_content"
        	android:layout_height="wrap_content"
        	android:text="Reserve Trip"
        	android:layout_gravity="center"
        	android:textSize="@dimen/smaller_font"
  			android:textColor="@android:color/white"
  			android:paddingLeft="8dp"
  			android:paddingRight="8dp"
        	android:singleLine="true"
		/>
	</FrameLayout>
        
</LinearLayout>