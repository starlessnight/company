<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/balloon_main_layout"
    android:layout_width="match_parent"
    android:layout_height="120dp"
    android:background="@android:color/transparent" >

    <LinearLayout
        android:id="@+id/poi_content"
        android:layout_width="285dp"
        android:layout_height="121dp"
        android:layout_gravity="center"
        android:background="@drawable/landing_page_popup_box"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/poi_title"
            android:layout_width="fill_parent"
            android:layout_height="29dp"
            android:gravity="center"
            android:text="FROM"
            android:textColor="@android:color/white"
            android:textSize="17dp" />

        <LinearLayout
            android:id="@+id/label_and_address_panel"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:gravity="center"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:drawablePadding="10dp"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:layout_gravity="center"
                android:gravity="center"
                android:paddingLeft="15dp"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:textColor="@color/metropia_green"
                android:textSize="13dp"
                android:visibility="gone" />
        </LinearLayout>

        <TextView
            android:id="@+id/fav_option"
            android:layout_width="match_parent"
            android:layout_height="37dp"
            android:gravity="center"
            android:textColor="@color/metropia_blue"
            android:textSize="@dimen/smaller_font" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/poi_content_mini"
        android:layout_width="80dp"
        android:layout_height="41dp"
        android:layout_gravity="center|bottom"
        android:background="@drawable/from_to_pin"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/poi_mini_title"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:includeFontPadding="false"
            android:text="FROM"
            android:textColor="@color/metropia_blue"
            android:textSize="17dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/poi_content_detail"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center|bottom"
        android:background="@drawable/from_departure_page_detail"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/poi_detail_title"
            android:layout_width="fill_parent"
            android:layout_height="15dp"
            android:gravity="center"
            android:text="FROM"
            android:textColor="@android:color/white"
            android:textSize="13dp" />

        <TextView
            android:id="@+id/detail_address"
            android:layout_width="match_parent"
            android:layout_height="20dp"
            android:gravity="center"
            android:paddingLeft="2dp"
            android:paddingRight="2dp"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:textSize="14dp" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1" />
    </LinearLayout>

</FrameLayout>