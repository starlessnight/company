<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/balloon_main_layout"
    android:layout_width="match_parent"
    android:layout_height="110dp"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:background="@android:color/transparent" >

    <LinearLayout
        android:id="@+id/poi_content"
        android:layout_width="265dp"
        android:layout_height="110dp"
        android:layout_gravity="center"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/poi_title"
            android:layout_width="fill_parent"
            android:layout_height="27dp"
            android:background="@drawable/poi_popup_title_background"
            android:gravity="center"
            android:text="FROM"
            android:textColor="@android:color/white"
            android:textSize="17dp" />

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="38dp"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/label"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="center"
                android:maxWidth="120dp"
                android:paddingLeft="5dp"
                android:paddingRight="17dp"
                android:drawablePadding="10dp"
                android:singleLine="true"
                android:textColor="@color/gray"
                android:textSize="16dp" />

            <TextView
                android:id="@+id/address"
                android:layout_width="wrap_content"
                android:layout_height="match_parent"
                android:gravity="left|center"
                android:paddingRight="15dp"
                android:singleLine="true"
                android:textColor="@color/metropia_green"
                android:textSize="13dp" />
        </LinearLayout>

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@color/secondary_font" />

        <TextView
            android:id="@+id/fav_option"
            android:layout_width="match_parent"
            android:layout_height="35dp"
            android:gravity="center"
            android:textColor="@color/metropia_blue"
            android:textSize="@dimen/smaller_font" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/poi_content_mini"
        android:layout_width="80dp"
        android:layout_height="41dp"
        android:layout_gravity="center|bottom"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/poi_mini_title"
            android:layout_width="match_parent"
            android:layout_height="0dp"
            android:layout_weight="1"
            android:gravity="center"
            android:text="FROM"
            android:textColor="@color/metropia_blue"
            android:textSize="17dp"
            android:includeFontPadding="false" />
    </LinearLayout>

    <LinearLayout
        android:id="@+id/poi_content_detail"
        android:layout_width="200dp"
        android:layout_height="40dp"
        android:layout_gravity="center|bottom"
        android:orientation="vertical"
        android:visibility="gone" >

        <TextView
            android:id="@+id/poi_detail_title"
            android:layout_width="fill_parent"
            android:layout_height="15dp"
            android:gravity="center"
            android:text="FROM"
            android:textColor="@android:color/white"
            android:textSize="13dp" />

        <View
            android:layout_width="fill_parent"
            android:layout_height="2dp"
            android:background="@color/secondary_font" />

        <TextView
            android:id="@+id/detail_address"
            android:layout_width="match_parent"
            android:layout_height="18dp"
            android:gravity="center"
            android:singleLine="true"
            android:textColor="@color/gray"
            android:textSize="14dp" />
    </LinearLayout>

</FrameLayout>