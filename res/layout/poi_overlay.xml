<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    	xmlns:android="http://schemas.android.com/apk/res/android" 
	    android:layout_height="90dp"
	    android:layout_width="match_parent"
	    android:id="@+id/poi_layout"
	    android:layout_marginLeft="20dp"
	    android:layout_marginRight="20dp">
	<LinearLayout
	    android:id="@+id/poi_content"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:weightSum="3"
	    android:layout_gravity="center">
	    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="2"
	        android:orientation="horizontal">
	        
	        <TextView 
	            android:id="@+id/label"
	            android:layout_height="match_parent"
	            android:layout_width="wrap_content"
	            android:maxWidth="120dp"
	            android:singleLine="true"
	            android:textColor="@color/gray"
	            android:textSize="@dimen/smallest_font"
	            android:gravity="center"
	            android:paddingLeft="5dp"
	            android:paddingRight="10dp"/>
	        
	        <TextView 
	            android:id="@+id/address"
	            android:layout_height="match_parent"
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:textColor="@color/light_green"
	            android:textSize="@dimen/micro_font"
	            android:gravity="left|center"
	            android:padding="5dp"/>
	        
	    </LinearLayout>
	    
	    <View 
	        android:layout_width="fill_parent"
	        android:layout_height="0.5dp"
	        android:background="@color/secondary_font"/>
	    
	    <LinearLayout
	        android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1"
	        android:orientation="horizontal">
	        
	        <TextView 
	            android:id="@+id/fav_option"
	            android:layout_height="match_parent"
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:textColor="@color/light_blue"
	            android:textSize="@dimen/smaller_font"
	            android:gravity="center"/>
	        
	        <View 
	            android:layout_width="0.5dp"
	            android:layout_height="fill_parent"
	            android:background="@color/secondary_font"/>
	        
	        <TextView 
	            android:id="@+id/next"
	            android:layout_height="match_parent"
	            android:layout_width="0dp"
	            android:layout_weight="1"
	            android:text="Next"
	            android:textColor="@color/light_blue"
	            android:textSize="@dimen/smaller_font"
	            android:gravity="center"/>
	        
	    </LinearLayout>
	    
	</LinearLayout>
</FrameLayout>