<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
      android:layout_width="match_parent"
      android:layout_height="match_parent">

    <ImageView
        android:src="@drawable/landing_page" 
        android:layout_width="match_parent"
      	android:layout_height="match_parent"
	/>
    
    <View
        android:id="@+id/plan_trip_btn"
        android:layout_marginTop="-40dp"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_gravity="center|left"
	/>
    
    <View
        android:id="@+id/go_home"
        android:layout_marginTop="10dp"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_gravity="center|left"
	/>
    
    <View
        android:id="@+id/work"
        android:layout_marginTop="60dp"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_gravity="center|left"
	/>
    
    <View
        android:id="@+id/get_me_out"
        android:layout_marginTop="110dp"
        android:layout_width="150dp"
        android:layout_height="45dp"
        android:layout_gravity="center|left"
	/>
    
    <RelativeLayout
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:visibility="gone">
		<LinearLayout
		    	android:id="@+id/header" 
		    	android:layout_width="match_parent"
	        	android:layout_height="30dp"
	        	android:background="#231f20"
	        	android:layout_alignParentTop="true"
	        	android:orientation="horizontal">
		    <ImageView
		        android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:src="@drawable/landing_topbar_smartrek"
	        	android:layout_gravity="center_vertical" 
	        	android:layout_marginLeft="10dp"
		    />
		    <TextView
		        android:id="@+id/title"
		        android:layout_width="wrap_content"
	        	android:layout_height="wrap_content"
	        	android:layout_gravity="center_vertical"
	        	android:layout_marginLeft="8dp"
		        android:textSize="@dimen/micro_font"
	           	android:textColor="@android:color/white"
	           	android:textStyle="bold"
		        android:text="Where would you like to go?"
		    />
		    <View
		        android:layout_width="wrap_content"
	        	android:layout_height="match_parent"
	        	android:layout_weight="1"
		    />
		    <TextView
		        android:id="@+id/date"
		        android:layout_width="16dp"
	        	android:layout_height="16dp"
	        	android:layout_gravity="center_vertical"
	        	android:layout_marginRight="8dp"
		        android:textSize="@dimen/micro_font"
	           	android:textColor="@android:color/white"
		        android:text="23"
		        android:gravity="center"
		        android:background="#6ec83d"
		    />
		</LinearLayout>
        
		<LinearLayout
		    	android:layout_width="match_parent"
	        	android:layout_height="108dp"
	        	android:orientation="horizontal"
	        	android:layout_below="@id/header">
		    <RelativeLayout
		       		android:layout_width="match_parent"
	        		android:layout_height="match_parent"
	        		android:background="#393536"
	        		android:layout_weight="1">
	        	<View
	        	    android:layout_width="72dp"
		        	android:layout_height="72dp"
		        	android:background="#bec0c2"
		        	android:layout_alignTop="@+id/avatar"
		        	android:layout_alignRight="@+id/avatar"
		        	android:layout_marginRight="-3dp"
		        	android:layout_marginTop="3dp"  
	        	/>
		        <ImageView
		            android:id="@+id/avatar"
			        android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:src="@drawable/avatar"
		        	android:layout_centerVertical="true"
		        	android:layout_alignParentRight="true"
		        	android:layout_marginRight="14dp"
		    	/>
		        <ImageView
		            android:id="@+id/clock_icon"
			        android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:src="@drawable/landing_profile_clock"
		        	android:layout_alignTop="@+id/avatar"
		        	android:layout_alignParentLeft="true"
		        	android:layout_marginTop="12dp"
		        	android:layout_marginLeft="14dp"
		    	/>
		        <TextView
		            android:id="@+id/clock"
		            android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		            android:textSize="@dimen/smallest_font"
		           	android:textColor="@android:color/white"
		           	android:text="23m"
		           	android:layout_toRightOf="@+id/clock_icon"
		           	android:layout_alignBottom="@+id/clock_icon"
		           	android:layout_marginLeft="4dp"
		        />
		        <ImageView
		            android:id="@+id/weather_icon"
			        android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		        	android:src="@drawable/landing_profile_weather"
		        	android:layout_alignBottom="@+id/avatar"
		        	android:layout_alignParentLeft="true"
		        	android:layout_marginBottom="12dp"
		        	android:layout_marginLeft="14dp"
		    	/>
		        <TextView
		            android:id="@+id/weather"
		            android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		            android:textSize="@dimen/smallest_font"
		           	android:textColor="@android:color/white"
		           	android:text="74Â°F"
		           	android:layout_toRightOf="@+id/weather_icon"
		           	android:layout_alignBottom="@+id/weather_icon"
		           	android:layout_marginLeft="4dp"
		        />
		    </RelativeLayout>
		    <RelativeLayout
		       		android:layout_width="match_parent"
	        		android:layout_height="match_parent"
	        		android:background="@drawable/trip_info_bg"
	        		android:layout_weight="1">
		        <TextView
		            android:id="@+id/trip_one"
		            android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		            android:textSize="@dimen/smaller_font"
		           	android:textColor="@android:color/white"
		           	android:text="Home to Univ"
		           	android:layout_alignParentTop="true"
		           	android:layout_alignParentLeft="true"
		           	android:layout_marginTop="25dp"
		           	android:layout_marginLeft="14dp"
		           	android:drawablePadding="8dp"
		           	android:drawableLeft="@drawable/landing_tripinfo_button"
		           	android:singleLine="true"
		        />
		        <TextView
		            android:id="@+id/trip_two"
		            android:layout_width="wrap_content"
		        	android:layout_height="wrap_content"
		            android:textSize="@dimen/smaller_font"
		           	android:textColor="@android:color/white"
		           	android:text="Univ to Home"
		           	android:layout_alignParentBottom="true"
		           	android:layout_alignParentLeft="true"
		           	android:layout_marginBottom="25dp"
		           	android:layout_marginLeft="14dp"
		           	android:drawablePadding="8dp"
		           	android:drawableLeft="@drawable/landing_tripinfo_button"
		           	android:singleLine="true"
		        />
		    </RelativeLayout>
	    </LinearLayout>
		
    </RelativeLayout>
    
</FrameLayout>