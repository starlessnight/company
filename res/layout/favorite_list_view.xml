<?xml version="1.0" encoding="utf-8"?>

<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingTop="2dp"
    android:paddingBottom="2dp"
    android:paddingLeft="10dp"
    android:paddingRight="10dp"
    android:orientation="horizontal">
    
    <LinearLayout 
        android:id="@+id/favorite_info_panel"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:orientation="vertical">
    
	    <LinearLayout
	        android:id="@+id/name_panel"
	        android:layout_width="fill_parent"
	        android:layout_height="wrap_content"
	        android:paddingTop="5dp"
	        android:paddingLeft="5dp"
	        android:orientation="horizontal">
	        
	        <ImageView 
		        android:id="@+id/fav_icon"
		        android:layout_width="30dp"
		        android:layout_height="30dp"
		        android:scaleType="fitCenter"
		        android:layout_gravity="center"
		        android:visibility="gone"/>
	    
			<TextView  
			    android:id="@+id/name"
			    android:singleLine="true"
			    android:layout_width="0dp"
			    android:layout_height="match_parent"
			    android:layout_weight="1"
			    android:paddingLeft="5dp"
			    android:paddingTop="1dp"
			    android:textSize="16dp"
			    android:textColor="@android:color/black"
			    android:gravity="center|left"
			    android:ellipsize="marquee"
			    android:includeFontPadding="false" />
			
		</LinearLayout>
		
		<TextView  
		    android:id="@+id/address"
		    android:layout_width="fill_parent"
		    android:layout_height="wrap_content"
		    android:textSize="@dimen/smallest_font"
		    android:textColor="@color/transparent_gray"
		    android:paddingLeft="5dp"
		    android:paddingTop="2dp"
		    android:gravity="center|left"/>
	
	</LinearLayout>
	
    <ImageView 
        android:id="@+id/edit_favorite"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:src="@drawable/reservation_reschedule"/>
	
</LinearLayout>