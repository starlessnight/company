<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:fillViewport="true">
    
<LinearLayout
    android:background="@drawable/background_gradient"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="vertical"
    android:focusable="true"
    android:focusableInTouchMode="true">
    
    <TextView
        android:id="@+id/time_heading"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:gravity="center"
        android:orientation="vertical"
        android:paddingTop="8dp"
        android:text="GPS options"
        android:textColor="#FFFFFFFF"
        android:textSize="20dp" >
    </TextView>

    <RelativeLayout
        android:layout_width="fill_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="65dp" >

        <RadioGroup
            android:layout_width="wrap_content"
            android:layout_height="wrap_content" >

            <RadioButton
                android:id="@+id/radio_real_gps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:text="Real GPS data"
                android:textColor="#FFFFFFFF"
                android:textSize="18dp" >
            </RadioButton>

            <RadioButton
                android:id="@+id/radio_prerecorded_gps"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:text="Pre-recorded Tucson data"
                android:textColor="#FFFFFFFF"
                android:textSize="20dp" >
            </RadioButton>
            
            <RadioButton
                android:id="@+id/radio_prerecorded_gps_la"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:text="Pre-recorded LA data"
                android:textColor="#FFFFFFFF"
                android:textSize="20dp" >
            </RadioButton>
            
            <RadioButton
                android:id="@+id/radio_prerecorded_gps_la_2"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:text="Pre-recorded LA data 2"
                android:textColor="#FFFFFFFF"
                android:textSize="20dp" >
            </RadioButton>
            
            <RadioButton
                android:id="@+id/radio_prerecorded_gps_la_3"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:text="Pre-recorded LA data 3"
                android:textColor="#FFFFFFFF"
                android:textSize="20dp" >
            </RadioButton>
            
            <RadioButton
                android:id="@+id/radio_prerecorded_gps_la_4"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:text="Pre-recorded LA data 4"
                android:textColor="#FFFFFFFF"
                android:textSize="20dp" >
            </RadioButton>

            <RadioButton
                android:id="@+id/radio_long_press"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:enabled="true"
                android:text="Long press"
                android:textColor="#FFFFFFFF"
                android:textSize="18dp" >
            </RadioButton>
        </RadioGroup>
    </RelativeLayout>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFFFF"
        android:textSize="18dp"
        android:gravity="center"
        android:text="Update interval (milliseconds):"
	/>
    <EditText
        android:id="@+id/update_interval"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="18dp"
        android:text="@string/placeholder"
        android:inputType="number" 
	/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFFFF"
        android:textSize="18dp"
        android:gravity="center"
        android:text="Current location:"
	/>
    <EditText
        android:id="@+id/current_location"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="18dp"
        android:singleLine="true"
        android:text="@string/placeholder"
	/>
    
    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textColor="#FFFFFFFF"
        android:textSize="18dp"
        android:gravity="center"
        android:text="Entrypoint:"
	/>
    <EditText
        android:id="@+id/entry_point"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginLeft="30dp"
        android:layout_marginRight="30dp"
        android:textColor="@android:color/darker_gray"
        android:textSize="18dp"
        android:singleLine="true"
        android:text="@string/placeholder"
	/>
    
    <LinearLayout 
        	android:layout_width="match_parent"
         	android:layout_height="wrap_content"
         	android:orientation="horizontal"
         	android:gravity="center_horizontal">
	    <TextView
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:text="Rerouting notification sound:"
	         android:textColor="#FFFFFFFF"
	         android:textSize="18dp"
		/>
	    <CheckBox 
	    	android:id="@+id/rerouting_notification_sound"
	    	android:layout_width="wrap_content"
	        android:layout_height="wrap_content"   
		/>
    </LinearLayout>
    
    <LinearLayout 
        	android:layout_width="match_parent"
         	android:layout_height="wrap_content"
         	android:orientation="horizontal"
         	android:gravity="center_horizontal">
	    <TextView
	         android:layout_width="wrap_content"
	         android:layout_height="wrap_content"
	         android:text="Rerouting log:"
	         android:textColor="#FFFFFFFF"
	         android:textSize="18dp"
		/>
	    <CheckBox 
	    	android:id="@+id/rerouting_debug_msg"
	    	android:layout_width="wrap_content"
	        android:layout_height="wrap_content"   
		/>
    </LinearLayout>

    <Button
        android:id="@+id/button_clear_cache"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:text="Clear cache" />

    <Button
        android:id="@+id/button_crash"
        android:layout_width="160dp"
        android:layout_height="wrap_content"
        android:layout_gravity="center"
        android:layout_margin="4dp"
        android:text="Crash app (!)"
        android:textColor="#FF2000" />

</LinearLayout>

</ScrollView>