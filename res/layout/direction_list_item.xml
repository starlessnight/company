<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:minHeight="88dp"
    android:orientation="vertical">
    
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_weight="1"
        android:orientation="horizontal">
        
    	<LinearLayout
    	    android:id="@+id/left_panel"  
	        android:layout_width="96dp"
	        android:layout_height="match_parent"
	        android:paddingTop="5dp"
	   		android:paddingBottom="5dp"
	        android:orientation="vertical">
	            
	        <ImageView
	            android:id="@+id/img_view_direction"
	            android:layout_height="wrap_content"
	            android:layout_width="wrap_content"
	            android:layout_gravity="center_horizontal"
	            android:src="@drawable/go_straight" 
			/>
	        
	        <TextView
		        android:id="@+id/text_view_distance"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_marginLeft="4dp"
		        android:layout_marginRight="4dp"
		        android:text="100.1 mi"
		        android:gravity="center_horizontal"
		        style="@style/LargeBoldText"
	    	/>
        
        </LinearLayout>
        
        <TextView
	        android:id="@+id/text_view_road"
	        android:layout_width="match_parent"
	        android:layout_height="match_parent"
	        android:layout_marginLeft="2dp"
	   		android:paddingLeft="18.5dp"
	   		android:paddingRight="18.5dp"
	   		android:textSize="28dp"
	   		android:text="@string/placeholder"
	        style="@style/LargeBoldText"
    	/>
        
    </LinearLayout>
    
    <View
       android:layout_width="match_parent"
       android:layout_height="2dp"
       android:background="@color/secondary_font"  
   	/>

</LinearLayout>