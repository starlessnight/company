<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smartrek.activities"
    android:versionCode="18"
    android:versionName="0.9.17" >

    <!-- http://stackoverflow.com/questions/9629125/regarding-version-code-and-version-name-android-manifest -->

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="15" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <permission
        android:name=".permission.C2D_MESSAGE"
        android:protectionLevel="signature" />

    <uses-permission android:name="com.google.android.c2dm.permission.RECEIVE" />
    <uses-permission android:name="com.smartrek.activities.permission.C2D_MESSAGE" />
    <uses-permission android:name="android.permission.GET_ACCOUNTS" />
    <uses-permission android:name="android.permission.READ_CALENDAR" />

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:targetPackage="com.smartrek.activities" />

    <application
        android:name="com.smartrek.SmarTrekApplication"
        android:icon="@drawable/icon"
        android:label="@string/app_name"
        android:logo="@drawable/icon_logo" >
        <uses-library android:name="android.test.runner" />

        <meta-data
            android:name="CLOUDMADE_KEY"
            android:value="0645c6d9b7aa4ba297816678f0571833" />

        <activity
            android:name="org.acra.CrashReportDialog"
            android:excludeFromRecents="true"
            android:finishOnTaskLaunch="true"
            android:launchMode="singleInstance"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar"
            android:configChanges="keyboardHidden|orientation|screenLayout|screenSize"
            android:alwaysRetainTaskState="true">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LicenseAgreementActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout|screenSize"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name=".LoginActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout|screenSize"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name=".TutorialActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout|screenSize"
            android:theme="@android:style/Theme.NoTitleBar" />
        <activity
            android:name=".HomeActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout|screenSize"
            android:theme="@style/Theme.smartrek"
            android:label="where to"
            android:launchMode="singleTask" />
        <activity
            android:name=".UserRegistrationActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout|screenSize"
            android:theme="@style/Theme.smartrek"
            android:label="@string/signup" />
        <activity
            android:name=".RouteActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout|screenSize"
            android:theme="@style/Theme.smartrek"
            android:label="select route" />
        <activity
            android:name=".ReservationConfirmationActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout|screenSize"
            android:theme="@style/Theme.smartrek"
            android:label="reserve?" />
        <activity
            android:name=".ReservationDetailsActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout|screenSize" 
            android:theme="@style/Theme.smartrek" />
        <activity
            android:name=".DebugOptionsActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout|screenSize"
            android:label="Debug options" />
        <activity
            android:name=".MapModeActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout|screenSize" />
        <activity
            android:name=".MapDisplayActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout|screenSize"
            android:theme="@style/Theme.smartrek" 
            android:label="@string/settings" />
        <activity
            android:name=".ReservationListActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout|screenSize"
            android:theme="@style/Theme.smartrek"
            android:label="my reservations" />
        <activity
            android:name=".ContactsActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout|screenSize"
            android:label="My contacts" />
        <activity
            android:name=".ContactDetailsActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout|screenSize" />
        <activity
            android:name=".CouponDetailsActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout|screenSize" />
        <activity
            android:name=".CouponsTabActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout|screenSize" />
        <activity
            android:name=".CouponSendActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout|screenSize" />
        <activity
            android:name=".ValidationActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout|screenSize"
            android:theme="@android:style/Theme.NoTitleBar"
            android:label="navigate"
            android:launchMode="singleTask" />
        <activity
            android:name=".ValidationReportActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout|screenSize"
            android:theme="@style/Theme.smartrek"
            android:label="@string/congratulations" />
        <activity
            android:name=".FavoriteAddressListActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout|screenSize" />

        <receiver android:name="com.smartrek.receivers.ReservationReceiver" />
        <receiver android:name="com.smartrek.receivers.NotificationExpiry" />
        <receiver android:name="com.smartrek.receivers.CalendarNotification" />
        <receiver android:name="com.smartrek.receivers.CalendarNotificationPlan" />
        <receiver android:name="com.smartrek.receivers.CalendarNotificationDelay" />
        <receiver
            android:name="com.google.android.gcm.GCMBroadcastReceiver"
            android:permission="com.google.android.c2dm.permission.SEND" >
            <intent-filter>
                <action android:name="com.google.android.c2dm.intent.RECEIVE" />
                <action android:name="com.google.android.c2dm.intent.REGISTRATION" />

                <category android:name="com.smartrek.activities" />
            </intent-filter>
        </receiver>

        <service android:name=".GCMIntentService" />
        <service android:name="com.smartrek.SendTrajectoryService" />
        <service android:name="com.smartrek.CalendarService" />
    </application>

</manifest>