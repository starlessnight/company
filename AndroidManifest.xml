<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.smartrek.activities"
    android:versionCode="13"
    android:versionName="0.9.12" >

    <!-- http://stackoverflow.com/questions/9629125/regarding-version-code-and-version-name-android-manifest -->

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="11" />

    <uses-permission android:name="android.permission.ACCESS_COARSE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_FINE_LOCATION" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />

    <instrumentation
        android:name="android.test.InstrumentationTestRunner"
        android:targetPackage="com.smartrek.activities" />

    <application
        android:name="com.smartrek.SmarTrekApplication"
        android:icon="@drawable/icon"
        android:label="@string/app_name" >
        <uses-library android:name="android.test.runner" />

        <meta-data
            android:name="CLOUDMADE_KEY"
            android:value="0645c6d9b7aa4ba297816678f0571833" />

        <activity
            android:name="org.acra.CrashReportDialog"
            android:excludeFromRecents="true"
            android:finishOnTaskLaunch="true"
            android:launchMode="singleInstance"
            android:theme="@android:style/Theme.Dialog" />
        <activity
            android:name=".MainActivity"
            android:label="@string/app_name"
            android:theme="@android:style/Theme.NoTitleBar" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".LicenseAgreementActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout"
            android:label="Smartrek EULA &amp; Terms of Service" />
        <activity
            android:name=".LoginActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout" />
        <activity
            android:name=".HomeActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout"
            android:label="Where to" />
        <activity
            android:name=".UserRegistrationActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout" />
        <activity
            android:name=".RouteActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout" />
        <activity
            android:name=".ReservationConfirmationActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout"
            android:label="Reserve route" />
        <activity
            android:name=".ReservationDetailsActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout" />
        <activity
            android:name=".DebugOptionsActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout"
            android:label="Debug options" />
        <activity
            android:name=".MapModeActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout" />
        <activity
            android:name=".MapDisplayActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout" />
        <activity
            android:name=".ReservationListActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout"
            android:label="My reservations" />
        <activity
            android:name=".ContactsActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout"
            android:label="My contacts" />
        <activity
            android:name=".ContactDetailsActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout" />
        <activity
            android:name=".CouponDetailsActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout" />
        <activity
            android:name=".CouponsTabActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout" />
        <activity
            android:name=".CouponSendActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout" />
        <activity
            android:name=".ValidationActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout" />
        <activity
            android:name=".ValidationReportActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout"
            android:label="Route validation report" />
        <activity
            android:name=".FavoriteAddressListActivity"
            android:configChanges="keyboardHidden|orientation|screenLayout" />

        <receiver android:name="com.smartrek.receivers.ReservationReceiver" />
    </application>

</manifest>